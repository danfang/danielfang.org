doctype html
html
    head
        block title
        include ../includes/head
    body
        #content.container-fluid
            include ../includes/menu

            mixin activity(title, date, img)
                .activity.media
                    .media-body
                        .title-container
                            p.title= title
                            p.date= date
                        block
                    .media-right.media-middle
                        img(src=img width="150px")
                hr

            block content

            include ../includes/social
            p#credits Site Design by Daniel Fang